<body>

<div id="layout" class="content pure-g">
    <div id="nav" class="pure-u">
        <a href="#" class="nav-menu-button">Menu</a>

        <div class="nav-inner">
            <a href="<%= edit_admin_registration_path %>"><img src="<%= current_admin.avatar.url(:medium) %>" style="border-radius: 100%; height: 75px; width: 75px;" class="profile-pic"></a>
            <a href= <%=new_proposal_path %>><button class="primary-button pure-button">New Proposal</button></a>
            <div class="pure-menu">
                <ul class="pure-menu-list">
                    <li class="pure-menu-item"><a href="<%=crtv_path%>" class="pure-menu-link">Projects <span class="email-count">(<%= current_admin.proposals.size %>)</span></a></li>
                    <li class="pure-menu-heading">Sort By</li>

                    <li class="pure-menu-item"><a href="/crtv?sort=price_up" class="pure-menu-link"><span class="email-label-personal"></span>Price</a></li>
                    <li class="pure-menu-item"><a href="/crtv?sort=date_up" class="pure-menu-link"><span class="email-label-work"></span>Date<span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span></a></li>
                    <li class="pure-menu-item"><a href="/crtv?sort=signed" class="pure-menu-link"><span class="email-label-travel"></span>Signed<span class="glyphicon glyphicon-ok" aria-hidden="true"></span></a></li>
                    <li class="pure-menu-item"><a href="/crtv?sort=unsigned" class="pure-menu-link"><span class="email-label-travel"></span>Not-Signed<span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></li>
                    <br>
                    <br>
                    <li class="pure-menu-item"><%= link_to "Sign Out", destroy_admin_session_path, method: "delete", class: "pure-menu-link" %></li>
                </ul>

            </div>
        </div>
    </div>
    <div id="list" class="pure-u-1">
<% if current_admin.proposals.size != 0 %>
        <% current_admin.proposals.each do |proposal| %>
        <div class="proposal_link">
        <a href="<%= proposal_path(proposal) %>">
                <div class="email-item pure-g">
                  <div class="pure-u-3-4">
                    <h5 class="email-name"><%= proposal.user.email %></h5>
                    <h4 class="email-subject"><%= proposal.title %></h4>
                    <p class="email-desc">
                        The "<%= proposal.title %>" budget for <%= proposal.user.email %> is <%= number_to_currency(proposal.budget)%>.
                    </p>
                </div>
            </div>
      </a>
    </div>
      <% end %>
    </div>

    <div id="main" class="pure-u-1">
        <div class="email-content">
            <div class="email-content-header pure-g">
                <div class="pure-u-1-2">
                    <h1 class="email-content-title">Welcome to Proposal.io</h1>
                    <p class="email-content-subtitle">
                        From <a>the CEO</a> at <span><%= Time.now.strftime("%l:%M %p - %A, %b %e") %></span>
                    </p>
                </div>
            </div>
            <div class="email-content-body">
                <p>
                    We know how valuable your time is as 'Creatives', and so, we have created a platform which will allow you to speed up your workflow while at the same time, increasing your productivity.
                </p>
                <p>
                    With Proposal.io, it's simple. Generating Proposals and Quotes has never been easier.
                </p>
                <p>
                    Fill out the form below, and you'll be on your way.
                </p>
                <p>
                    Regards,<br>
                    Braydon Whitmarsh
                </p>


<div id="new-form">
                  <%= form_for(@proposal) do |f| %>
                  <b><legend>Header</legend></b><br>
                  <%= f.text_field :email, placeholder: "Email   -   e.g. john@doe.com" %>
                    <br>
                  <%= f.text_field :title, placeholder: "Title   -   e.g. SEO/Marketing" %>
                    <br>
                  <%= f.number_field :budget, placeholder: "Budget   -   e.g. $2,000" %>
                <br>
                <br>

                  <b><legend>Fees</legend></b><br>
                  <% i = 1 %>
                  <%= f.fields_for :fees, @proposal.fees.each do |fee_builder| %>
                    <%= fee_builder.text_field :content, placeholder: "Deliverable #{i}   -   e.g. Brainstorming/Planning" %><br>
                    <%= fee_builder.number_field :price_breakdown, placeholder: "Price   -   e.g. $300" %><br>
                    <%= fee_builder.hidden_field :proposal_id %>
                    <% i = i+1 %><br>
                  <% end %>


                <br>

                  <b><legend>Milestones</legend></b><br>
                  <% i = 1 %>
                    <%= f.fields_for :milestones, @proposal.milestones.each do |milestone_builder| %>
                      <%= milestone_builder.text_field :content, placeholder: "Milestone #{i}   -   e.g. Completed SEO Report" %><br>
                      <%= milestone_builder.text_field :due_date, placeholder: "Due Date   -   e.g. Dec.24th"%><br>
                      <%= milestone_builder.hidden_field :proposal_id %>
                      <% i = i+1 %>
                      <br>
                    <% end %>

                <br>
                  <%= f.submit %>

                <% end %>
</div>
            </div>

        </div>
    </div>
</div>

<script src="https://yui-s.yahooapis.com/3.18.1/build/yui/yui-min.js"></script>
<script>
    YUI().use('node-base', 'node-event-delegate', function (Y) {

        var menuButton = Y.one('.nav-menu-button'),
            nav        = Y.one('#nav');

        // Setting the active class name expands the menu vertically on small screens.
        menuButton.on('click', function (e) {
            nav.toggleClass('active');
        });

        // Your application code goes here...

    });
</script>

<% else %>
      <div class="proposal_link">
      <a href="<%= new_proposal_path %>">
        <div class="email-item pure-g">
          <div class="pure-u-3-4">
            <h5 class="email-name"> CEO@proposal.io</h5>
            <h4 class="email-subject"> Create Your First Proposal</h4>
            <p class="email-desc">
                Look to the right.. See that form? Fill it out to create your first Proposal....
          </div>
        </div>
      </a>
      </div>
      </div>

      <div id="main" class="pure-u-1">
      <div class="email-content">
          <div class="email-content-header pure-g">
              <div class="pure-u-1-2">
                  <h1 class="email-content-title">Create Your First Proposal</h1>
                  <p class="email-content-subtitle">
                      From <a>the CEO</a> at <span><%= Time.now.strftime("%l:%M %p - %A, %b %e") %></span>
                  </p>
              </div>
          </div>

          <div class="email-content-body">
              <p>
                  We know how valuable your time is as 'Creatives', and so, we have created a platform which will allow you to speed up your workflow while at the same time, increasing your productivity.
              </p>
              <p>
                  With Proposal.io, it's simple. Generating Proposals and Quotes has never been easier.
              </p>
              <p>
                  Fill out the form below, and you'll be on your way.
              </p>
              <p>
                  Regards,<br>
                  Braydon Whitmarsh
              </p>


        <div id="new-form">
                <%= form_for(@proposal) do |f| %>
                <%= f.label :email %>
                <%= f.text_field :email %>
                  <br>
                <%= f.label :title %>
                <%= f.text_field :title %>
                  <br>
                <%= f.label :budget %>
                <%= f.number_field :budget %>
              <br>
              <br>

                <b><legend>Fees</legend></b>
                <% i = 1 %>
                <%= f.fields_for :fees, @proposal.fees.each do |fee_builder| %>
                  <%= fee_builder.label "Fee #{i}:" %>
                  <%= fee_builder.text_field :content %><br>
                  <%= fee_builder.label "Price Breakdown:" %>
                  <%= fee_builder.number_field :price_breakdown %><br>
                  <%= fee_builder.hidden_field :proposal_id %>
                  <% i = i+1 %>
                <% end %>


              <br>

                <b><legend>Milestones</legend></b>
                <% i = 1 %>
                  <%= f.fields_for :milestones, @proposal.milestones.each do |milestone_builder| %>
                    <%= milestone_builder.label "Milestone #{i}:" %>
                    <%= milestone_builder.text_field :content %><br>
                    <%= milestone_builder.label "Due Date:" %>
                    <%= milestone_builder.text_field :due_date, prompt: { day: 'Select day', month: 'Select month', year: 'Select year'}, :order => [:day, :month, :year]%><br>
                    <%= milestone_builder.hidden_field :proposal_id %>
                    <% i = i+1 %>
                  <% end %>

              <br>
                <%= f.submit %>

              <% end %>
        </div>
          </div>

      </div>
      </div>
      </div>

      <script src="https://yui-s.yahooapis.com/3.18.1/build/yui/yui-min.js"></script>
      <script>
      YUI().use('node-base', 'node-event-delegate', function (Y) {

      var menuButton = Y.one('.nav-menu-button'),
          nav        = Y.one('#nav');
      menuButton.on('click', function (e) {
          nav.toggleClass('active');
      });
      });
      </script>


<% end %>

</body>
</html>
