<div class="vertical-center">
    <div id="container">
      <h5>EDIT ACCOUNT</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true  }) do |f| %>
  <%= devise_error_messages! %>

  <div class="image-upload">
      <label for="avatar">
        <span>
          <% if current_user %>
              <div id="upload-background" style="width:5vw; height:5vw; background-size: cover; background-image: url(<%=current_user.avatar.url(:medium)%>); border-radius: 100%; line-height: 5vw;">
                Edit Picture
              </div>
          <% elsif current_admin %>
              <div id="upload-background" style="width:5vw; height:5vw; background-size: cover; background-image: url(<%=current_admin.avatar.url(:medium)%>); border-radius: 100%; line-height: 5vw; color: black;">
                Edit Picture
              </div>
          <% else %>
              <div id="upload-background" style="width:5vw; height:5vw; background-size: cover; background-image: url("/images/profpic.jpg"); border-radius: 100%; line-height: 5vw; color:black;">
                Edit Picture
              </div>
          <% end %>
        </span>
      </label>
    <%= f.file_field :avatar, placeholder: "Profile Pic", id: "avatar"%>
  </div>

  <%= f.text_field :first_name, autofocus: true, placeholder: :first_name %>
  <%= f.text_field :last_name, autofocus: true, placeholder: :last_name %>
  <%= f.text_field :company_name, autofocus: true, placeholder: :company_name %>
  <%= f.email_field :email, autofocus: true, placeholder: :email %>
  <%= f.text_field :phone, maxlength: 10, placeholder: :phone %>
  <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Retype Password" %>
  <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password" %>
  <%= f.submit "Update Account" %>
  <br>
  <br>
<% end %>

<h3>Delete Your Account?</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
<%= link_to "Back", :back %>

</div>
</div>
</div>
